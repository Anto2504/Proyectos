<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/cf">

    <!-- Agrega un TextView para mostrar los puntos -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/pointsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puntos: 0"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:id="@+id/upImage"
        android:background="@drawable/up"
        android:alpha="0.7"
        android:contentDescription="Botón Arriba" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="210dp"
        android:layout_height="320dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:id="@+id/cardImageView"
        android:src="@drawable/cf" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:id="@+id/downImage"
        android:background="@drawable/down"
        android:alpha="0.7"
        android:contentDescription="Botón Abajo" />
</androidx.appcompat.widget.LinearLayoutCompat>
